<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Círculo externo com gradiente (cores do logo MX) -->
    <item>
        <shape android:shape="oval">
            <size
                android:width="108dp"
                android:height="108dp" />
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#00A8E8"
                android:centerColor="#0077B6"
                android:endColor="#8BC34A" />
        </shape>
    </item>
    
    <!-- Círculo interno branco -->
    <item
        android:top="10dp"
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    
    <!-- Texto "MX" com gradiente azul -->
    <!-- Letra M (simplificada) -->
    <item
        android:top="38dp"
        android:bottom="70dp"
        android:left="24dp"
        android:right="54dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#00A8E8"
                android:endColor="#0077B6" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    
    <!-- Letra X (simplificada) -->
    <item
        android:top="38dp"
        android:bottom="70dp"
        android:left="54dp"
        android:right="84dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#0077B6"
                android:endColor="#00A8E8" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>
